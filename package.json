{
  "name": "jumpseat",
  "version": "2.1.0",
  "description": "Hot restart a node server, automatically.",
  "keywords": [
    "chokidar",
    "hot"
  ],
  "license": "MIT",
  "author": "Suneil Nyamathi <suneil.nyamathi@verizonmedia.com>",
  "main": "index.js",
  "files": [
    "index.js",
    "lib.js"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint *.ts",
    "test": "jest"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "prettier"
    ],
    "rules": {
      "sort-keys": "error",
      "prettier/prettier": "error"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "chokidar": "^3.4.2",
    "lodash": "4.17.20"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/lodash": "4.14.159",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
}
